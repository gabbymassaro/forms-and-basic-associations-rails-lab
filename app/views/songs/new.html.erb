<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :song_title, "Title" %>
  <%= f.text_field :title, name: 'song[title]' %>
  <br><br>

  <%= f.label :artist %>
  <%= f.text_field :artist_id %>
  <br><br>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br><br>

  <%= f.label :song_notes_1 %>
  <%= f.text_field :notes, id: :song_notes_1 %>
  <br><br>

  <%= f.label :song_notes_2 %>
  <%= f.text_field :notes, id: :song_notes_2 %>
  <br><br>

  <%= f.submit %>
<% end %>
